@{
    ViewData["Title"] = "Database Connection Stats - Singleton Pattern";
    var stats = ViewBag.Stats as ADPD_code.Patterns.ConnectionStats;
    var activeConnections = ViewBag.ActiveConnections as ADPD_code.Patterns.ActiveConnection[];
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            margin: 0;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            background: white;
            padding: 30px;
            border-radius: 12px;
            margin-bottom: 20px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }

        .header h1 {
            margin: 0 0 10px 0;
            color: #333;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .badge {
            background: #667eea;
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 14px;
            font-weight: 600;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }

        .stat-card {
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }

        .stat-card h3 {
            margin: 0 0 10px 0;
            color: #666;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .stat-value {
            font-size: 36px;
            font-weight: 700;
            color: #667eea;
            margin: 10px 0;
        }

        .stat-label {
            color: #999;
            font-size: 13px;
        }

        .actions {
            background: white;
            padding: 20px;
            border-radius: 12px;
            margin-bottom: 20px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }

        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            margin-right: 10px;
            transition: all 0.3s;
        }

        .btn-primary {
            background: #667eea;
            color: white;
        }

        .btn-primary:hover {
            background: #5568d3;
            transform: translateY(-2px);
        }

        .btn-success {
            background: #48bb78;
            color: white;
        }

        .btn-warning {
            background: #f6ad55;
            color: white;
        }

        .connections-list {
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }

        .connections-list h2 {
            margin: 0 0 20px 0;
            color: #333;
        }

        .connection-item {
            background: #f7fafc;
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 8px;
            border-left: 4px solid #667eea;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .connection-id {
            font-family: 'Courier New', monospace;
            color: #667eea;
            font-weight: 600;
        }

        .connection-time {
            color: #666;
            font-size: 13px;
        }

        .no-connections {
            text-align: center;
            padding: 40px;
            color: #999;
        }

        .status-indicator {
            display: inline-block;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background: #48bb78;
            margin-right: 8px;
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        .info-box {
            background: #e6fffa;
            border-left: 4px solid #38b2ac;
            padding: 15px;
            margin-top: 20px;
            border-radius: 8px;
        }

        #statusMessage {
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            display: none;
        }

        .success-message {
            background: #c6f6d5;
            border-left: 4px solid #48bb78;
            color: #22543d;
        }

        .error-message {
            background: #fed7d7;
            border-left: 4px solid #f56565;
            color: #742a2a;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>
                <span class="status-indicator"></span>
                Database Connection Manager
                <span class="badge">Singleton Pattern</span>
            </h1>
            <p style="color: #666; margin: 10px 0 0 0;">
                Real-time monitoring of database connections using Singleton Design Pattern
            </p>
            <div class="info-box">
                <strong>📌 Pattern Info:</strong> This manager ensures only ONE instance handles all database connections,
                improving performance and resource management.
            </div>
        </div>

        <div id="statusMessage"></div>

        <!-- Statistics Grid -->
        <div class="stats-grid">
            <div class="stat-card">
                <h3>Total Connections</h3>
                <div class="stat-value">@stats.TotalConnections</div>
                <div class="stat-label">Since server start</div>
            </div>

            <div class="stat-card">
                <h3>Active Connections</h3>
                <div class="stat-value">@stats.ActiveConnections</div>
                <div class="stat-label">Currently open</div>
            </div>

            <div class="stat-card">
                <h3>Uptime</h3>
                <div class="stat-value">@stats.Uptime.TotalMinutes.ToString("F1")m</div>
                <div class="stat-label">Manager uptime</div>
            </div>

            <div class="stat-card">
                <h3>Pool Size</h3>
                <div class="stat-value">@stats.ConnectionPoolSize</div>
                <div class="stat-label">Tracked connections</div>
            </div>
        </div>

        <!-- Actions -->
        <div class="actions">
            <h3 style="margin: 0 0 15px 0; color: #333;">Actions</h3>
            <button class="btn btn-primary" onclick="testConnection()">🔍 Test Connection</button>
            <button class="btn btn-success" onclick="refreshStats()">🔄 Refresh Stats</button>
            <button class="btn btn-warning" onclick="createMultiple()">⚡ Create 5 Contexts</button>
            <button class="btn btn-primary" onclick="verifySingleton()">✓ Verify Singleton</button>
        </div>

        <!-- Active Connections List -->
        <div class="connections-list">
            <h2>Active Connections (@(activeConnections?.Length ?? 0))</h2>
            @if (activeConnections != null && activeConnections.Length > 0)
            {
                <div id="connectionsList">
                    @foreach (var conn in activeConnections)
                    {
                        <div class="connection-item">
                            <div>
                                <div class="connection-id">@conn.Id</div>
                                <div class="connection-time">
                                    Created: @conn.CreatedAt.ToString("HH:mm:ss")
                                    | Age: @conn.Age.TotalSeconds.ToString("F1")s
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="no-connections">
                    No active connections at the moment
                </div>
            }
        </div>

        <!-- Connection String Info -->
        <div class="connections-list" style="margin-top: 20px;">
            <h2>Connection Information</h2>
            <div style="background: #f7fafc; padding: 15px; border-radius: 8px; font-family: monospace; font-size: 13px;">
                @ViewBag.ConnectionString
            </div>
            <p style="color: #666; margin-top: 10px; font-size: 13px;">
                <strong>Note:</strong> Password is masked for security
            </p>
        </div>
    </div>

    <script>
        function showMessage(message, isSuccess) {
            const msgDiv = document.getElementById('statusMessage');
            msgDiv.textContent = message;
            msgDiv.className = isSuccess ? 'success-message' : 'error-message';
            msgDiv.style.display = 'block';

            setTimeout(() => {
                msgDiv.style.display = 'none';
            }, 5000);
        }

        async function testConnection() {
            try {
                const response = await fetch('/DatabaseStats/TestConnection');
                const data = await response.json();

                showMessage(data.message, data.success);

                if (data.success) {
                    await refreshStats();
                }
            } catch (error) {
                showMessage('❌ Error: ' + error.message, false);
            }
        }

        async function refreshStats() {
            try {
                const response = await fetch('/DatabaseStats/GetStats');
                const data = await response.json();

                // Update stats display
                document.querySelectorAll('.stat-value')[0].textContent = data.stats.totalConnections;
                document.querySelectorAll('.stat-value')[1].textContent = data.stats.activeConnections;
                document.querySelectorAll('.stat-value')[2].textContent = (data.stats.uptimeSeconds / 60).toFixed(1) + 'm';
                document.querySelectorAll('.stat-value')[3].textContent = data.stats.connectionPoolSize;

                showMessage('✅ Stats refreshed successfully!', true);
            } catch (error) {
                showMessage('❌ Error refreshing stats: ' + error.message, false);
            }
        }

        async function createMultiple() {
            showMessage('⏳ Creating 5 DbContext instances...', true);

            try {
                const response = await fetch('/DatabaseStats/CreateMultipleContexts?count=5');
                const data = await response.json();

                showMessage('✅ ' + data.message, true);

                setTimeout(() => refreshStats(), 1000);
            } catch (error) {
                showMessage('❌ Error: ' + error.message, false);
            }
        }

        async function verifySingleton() {
            try {
                const response = await fetch('/DatabaseStats/VerifySingleton');
                const data = await response.json();

                const message = data.areSameInstance
                    ? '✅ Singleton verified! Same instance everywhere (HashCode: ' + data.instance1HashCode + ')'
                    : '❌ Warning: Different instances detected!';

                showMessage(message, data.areSameInstance);
            } catch (error) {
                showMessage('❌ Error: ' + error.message, false);
            }
        }

        // Auto-refresh every 10 seconds
        setInterval(() => {
            refreshStats();
        }, 10000);
    </script>
</body>
</html>