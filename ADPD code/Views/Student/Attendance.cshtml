        loadBtn.disabled = true;

        let url = `/Student/GetMyAttendance?courseId=${courseId}`;
        if (startDate) url += `&startDate=${startDate}`;
        if (endDate) url += `&endDate=${endDate}`;

        document.getElementById('attendanceTableBody').innerHTML = '<tr><td colspan="3" style="text-align: center; padding: 40px;"><div class="loading" style="margin: 0 auto;"></div><p style="margin-top: 15px; color: #6c757d;">ƒêang t·∫£i d·ªØ li·ªáu...</p></td></tr>';

        fetch(url)
            .then(response => response.json())
            .then(data => {
