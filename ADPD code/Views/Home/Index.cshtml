<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Management System</title>
    <link rel="stylesheet" href="~/css/Home.css" />
</head>
<body>

    <!-- Hero Section -->
    <section class="hero" id="home">
        <div class="hero-content">
            <h1>Student Management System</h1>
            <p>Modern, efficient, and user-friendly solution for managing student information. Track grades, schedules, and personal data conveniently.</p>
            <div class="hero-buttons">
                <a href="@Url.Action("Index", "Register")" class="btn btn-hero btn-register">Get Started</a>
                <a href="#features" class="btn btn-hero btn-white">Learn More</a>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features" id="features">
        <div class="features-container">
            <h2 class="section-title">Key Features</h2>
            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon">👤</div>
                    <h3>Information Management</h3>
                    <p>Manage students' personal information comprehensively and accurately</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">📊</div>
                    <h3>Grade Tracking</h3>
                    <p>View and update course grades by semester</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">📅</div>
                    <h3>Schedules</h3>
                    <p>Organize timetables and exam schedules efficiently</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">📚</div>
                    <h3>Course Registration</h3>
                    <p>Quick and convenient online course registration</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">🔔</div>
                    <h3>Notifications</h3>
                    <p>Receive alerts about schedules, grades, and important events</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats">
        <div class="stats-container">
            <div class="stat-item">
                <h2>10,000+</h2>
                <p>Students</p>
            </div>
            <div class="stat-item">
                <h2>500+</h2>
                <p>Lecturers</p>
            </div>
            <div class="stat-item">
                <h2>50+</h2>
                <p>Departments</p>
            </div>
            <div class="stat-item">
                <h2>99%</h2>
                <p>Satisfaction</p>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta">
        <div class="cta-content">
            <h2>Ready to get started?</h2>
            <p>Join thousands of students who trust our management system. Sign up today and experience it!</p>
            <a href="@Url.Action("Index", "Register")" class="btn btn-register btn-hero">Sign Up for Free</a>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-links">
                <a href="#home">Home</a>
                <a href="#features">Features</a>
                <a href="#about">About</a>
                <a href="#contact">Contact</a>
                <a href="#">Privacy Policy</a>
                <a href="#">Terms of Service</a>
            </div>
            <p>&copy; 2024 Student Management System. All rights reserved.</p>
            @if (ViewBag.IsConnected == true)
            {
                <h1>Database Connected</h1>
            }
            else
            {
                <h1>Database Connection Failed</h1>
            }
        </div>
    </footer>

    @section Scripts {
        <script src="~/js/Home.js"></script>
    }

</body>
</html>
