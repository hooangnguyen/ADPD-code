@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Assignment</title>
    <link href="~/css/AssignHomework.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="form-container">
            <form id="assignmentForm">
                <!-- Basic Information -->
                <div class="form-section">
                    <h2 class="section-title">
                        <span>📋</span>
                        Basic Information
                    </h2>

                    <div class="form-group">
                        <label class="form-label">
                            Assignment Title <span class="required">*</span>
                        </label>
                        <input type="text" class="form-input" id="title" placeholder="Example: Assignment 1 - Website Design" required>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                Course <span class="required">*</span>
                            </label>
                            <select class="form-select" id="subject" name="courseId" required>
                                <option value="">-- Select course --</option>
                                @if (ViewBag.Courses != null)
                                {
                                    @foreach (var course in ViewBag.Courses as List<ADPD_code.Models.Course>)
                                    {
                                        <option value="@course.CourseID">@course.CourseName</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                Class <span class="required">*</span>
                            </label>
                            <select class="form-select" id="class" required>
                                <option value="">-- Select class --</option>
                                <option value="CNTT01-K65">CNTT01-K65</option>
                                <option value="CNTT02-K65">CNTT02-K65</option>
                                <option value="CNTT03-K65">CNTT03-K65</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            Assignment Description <span class="required">*</span>
                        </label>
                        <textarea class="form-textarea" id="description" placeholder="Detailed description of the assignment, requirements, objectives..." required></textarea>
                    </div>
                </div>

                <!-- Time and Score -->
                <div class="form-section">
                    <h2 class="section-title">
                        <span>⏰</span>
                        Time and Score
                    </h2>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                Assigned Date <span class="required">*</span>
                            </label>
                            <input type="datetime-local" class="form-input" id="startDate" required>
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                Due Date <span class="required">*</span>
                            </label>
                            <input type="datetime-local" class="form-input" id="dueDate" required>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                Maximum Score <span class="required">*</span>
                            </label>
                            <input type="number" class="form-input score-input" id="maxScore" min="0" max="10" step="0.5" value="10" required>
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                Maximum Submissions
                            </label>
                            <select class="form-select" id="submissionLimit">
                                <option value="unlimited">Unlimited</option>
                                <option value="1">1 time</option>
                                <option value="2">2 times</option>
                                <option value="3">3 times</option>
                                <option value="5">5 times</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Detailed Requirements -->
                <div class="form-section">
                    <h2 class="section-title">
                        <span>✅</span>
                        Detailed Requirements
                    </h2>

                    <div class="form-group">
                        <label class="form-label">
                            Requirements List
                        </label>
                        <textarea class="form-textarea" id="requirements" placeholder="Enter each requirement on a new line...&#10;Example:&#10;- Responsive design&#10;- Use Entity Framework&#10;- Code with comments"></textarea>
                    </div>
                </div>

                <!-- Attachments -->
                <div class="form-section">
                    <h2 class="section-title">
                        <span>📎</span>
                        Attachments
                    </h2>

                    <div class="upload-zone" onclick="document.getElementById('fileInput').click()">
                        <div class="upload-icon">☁️</div>
                        <h3 style="color: #667eea; margin-bottom: 10px;">Upload Documents</h3>
                        <p style="color: #6c757d; margin-bottom: 10px;">Drag and drop files here or click to select</p>
                        <p style="color: #6c757d; font-size: 12px;">Supported: PDF, Word, Excel, ZIP, RAR, images (Max 50MB/file)</p>
                        <input type="file" id="fileInput" multiple onchange="handleFiles(event)">
                    </div>

                    <div class="file-list" id="fileList"></div>

                    <div class="info-box">
                        <p>💡 <strong>Tip:</strong> You can attach guide documents, templates, sample databases, or any necessary materials for the assignment.</p>
                    </div>
                </div>
               

                <!-- Action Buttons -->
                <div class="action-buttons">
                    <a href="@Url.Action("Assignments", "Lecturer")" class="btn btn-outline">
                        ← Back to Assignment Management
                    </a>
                    <button type="button" class="btn btn-outline" onclick="saveDraft()">
                        💾 Save Draft
                    </button>
                    <button type="submit" class="btn btn-primary">
                        📤 Assign
                    </button>
                </div>
            </form>
        </div>
    </div>
    <script src="~/js/Create.js" asp-append-version="true"></script>
</body>
</html>