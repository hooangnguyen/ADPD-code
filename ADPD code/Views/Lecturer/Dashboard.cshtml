@{
    Layout = null;
    var isPartial = ViewData["IsPartial"] as bool? ?? false;
}

@if (isPartial)
{
    @await Html.PartialAsync("_DashboardHomePartial")
}
else
{ 
    <link rel="stylesheet" href="~/css/Dashboardlecture.css" />
    <body>
    <aside class="sidebar">
        <div class="sidebar-header">
            <a href="@Url.Action("Dashboard", "Lecturer")" class="sidebar-logo">
                👩‍🏫 TeacherMS
            </a>
        </div>

        <div class="user-profile">
                <a href="@Url.Action("ProfileLecturer", "Lecturer")"
                   data-partial-url="@Url.Action("ProfileLecturer", "Lecturer", new { partial = true })">
                <div class="user-avatar"></div>
                <div class="user-info">
                    <h3>@(ViewBag.FullName ?? "Giảng viên")</h3>
                    <p>Giảng viên</p>
                </div>
            </a>
        </div>

        <ul class="menu">
            <li class="menu-item">
                <a href="@Url.Action("Dashboard", "Lecturer")" 
                   class="active"
                   data-partial-url="@Url.Action("Dashboard", "Lecturer", new { partial = true })">
                    <span class="menu-icon">🏠</span>
                    <span>Trang chủ</span>
                </a>
            </li>
            <li class="menu-item">
                <a href="@Url.Action("Courses", "Lecturer")"
                   data-partial-url="@Url.Action("Courses", "Lecturer", new { partial = true })">
                    <span class="menu-icon">📚</span>
                    <span>Môn học</span>
                </a>
            </li>
            <li class="menu-item">
                <a href="@Url.Action("Assignments", "Lecturer")"
                   data-partial-url="@Url.Action("Assignments", "Lecturer", new { partial = true })">
                    <span class="menu-icon">📝</span>
                    <span>Bài tập</span>
                </a>
            </li>
            <li class="menu-item">
                <a href="@Url.Action("Attendance", "Lecturer")"
                   data-partial-url="@Url.Action("Attendance", "Lecturer", new { partial = true })">
                    <span class="menu-icon">📋</span>
                    <span>Điểm danh</span>
                </a>
            </li>
            <li class="menu-item">
                    <a href="@Url.Action("InformationStudent", "Lecturer")"
                   data-partial-url="@Url.Action("InformationStudent", "Lecturer", new { partial = true })">
                    <span class="menu-icon">🎓</span>
                    <span>Sinh viên</span>
                </a>
            </li> 
            <li class="menu-item">
                <a href="@Url.Action("Logout", "Login")">
                    <span class="menu-icon">🔒</span>
                    <span>Đăng xuất</span>
                </a>
            </li>
        </ul>
    </aside>

    <main class="main-content">
        <div id="dynamic-content"
             data-default-url='@Url.Action("Dashboard", "Lecturer", new { partial = true })'>
            @await Html.PartialAsync("_DashboardHomePartial")
        </div>
    </main>
    <script src="~/js/Dashboard.js" asp-append-version="true"></script>
    </body>
}
