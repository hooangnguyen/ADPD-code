@{
    Layout = null;
}
<meta charset="utf-8" />
<link rel="stylesheet" href="~/css/Dashboardlecture.css" />

<aside class="sidebar">
    <div class="sidebar-header">
        <a href="@Url.Action("Dashboard", "Lecturer")" class="sidebar-logo">
            👨‍🏫 TeacherMS
        </a>
    </div>

    <div class="user-profile">
        <div class="user-avatar">👤</div>
        <div class="user-info">
            <h3>@(ViewBag.FullName ?? "Giảng viên")</h3>
            <p>Giảng viên</p>
        </div>
    </div>

    <ul class="menu">
        <li class="menu-item">
            <a href="@Url.Action("Dashboard", "Lecturer")" class="active">
                <span class="menu-icon">🏠</span>
                <span>Trang chủ</span>
            </a>
        </li>
        <li class="menu-item">
            <a href="#">
                <span class="menu-icon">📚</span>
                <span>Môn học</span>
            </a>
        </li>
        <li class="menu-item">
            <a href="#">
                <span class="menu-icon">📝</span>
                <span>Bài tập</span>
            </a>
        </li>
        <li class="menu-item">
            <a href="#">
                <span class="menu-icon">💯</span>
                <span>Chấm điểm</span>
            </a>
        </li>
        <li class="menu-item">
            <a href="#">
                <span class="menu-icon">✅</span>
                <span>Điểm danh</span>
            </a>
        </li>
        <li class="menu-item">
            <a href="#">
                <span class="menu-icon">🧑‍🎓</span>
                <span>Sinh viên</span>
            </a>
        </li>
        <li class="menu-item">
            <a href="@Url.Action("Logout", "Login")">
                <span class="menu-icon">🚪</span>
                <span>Đăng xuất</span>
            </a>
        </li>
    </ul>
</aside>

<main class="main-content">
    <div class="topbar">
        <div class="topbar-left">
            <h1>Dashboard Giảng viên</h1>
            <div class="breadcrumb">
                <span>Trang chủ</span>
                <span>/</span>
                <span>Dashboard</span>
            </div>
        </div>
        <div class="topbar-right">
            <button class="notification-btn">
                🔔
                <span class="notification-badge">5</span>
            </button>
            <div class="user-menu">
                <img src="" alt="Ảnh đại diện">
                <span>@(ViewBag.FullName ?? "Giảng viên")</span>
            </div>
        </div>
    </div>

    <div class="dashboard-content">
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon blue">📘</div>
                <div class="stat-info">
                    <h3>Môn học phụ trách</h3>
                    <div class="value">4</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon green">👥</div>
                <div class="stat-info">
                    <h3>Tổng sinh viên</h3>
                    <div class="value">156</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon orange">✍️</div>
                <div class="stat-info">
                    <h3>Bài tập chưa chấm</h3>
                    <div class="value">23</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon purple">🗓️</div>
                <div class="stat-info">
                    <h3>Lớp hôm nay</h3>
                    <div class="value">2</div>
                </div>
            </div>
        </div>

        <div class="content-grid">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Môn học của tôi</h2>
                    <a href="#" class="view-all">Xem tất cả →</a>
                </div>
                <table class="course-table">
                    <thead>
                        <tr>
                            <th>Môn học</th>
                            <th>Lớp</th>
                            <th>Sinh viên</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <div class="course-name">Lập trình Web</div>
                                <div class="course-code">CS301</div>
                            </td>
                            <td><span class="course-badge">CNPM01</span></td>
                            <td>45 SV</td>
                            <td>
                                <div class="action-btns">
                                    <a href="#" class="btn-sm btn-view">Xem</a>
                                    <a href="#" class="btn-sm btn-edit">Quản lý</a>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="course-name">Cơ sở dữ liệu</div>
                                <div class="course-code">CS302</div>
                            </td>
                            <td><span class="course-badge">CNPM02</span></td>
                            <td>38 SV</td>
                            <td>
                                <div class="action-btns">
                                    <a href="#" class="btn-sm btn-view">Xem</a>
                                    <a href="#" class="btn-sm btn-edit">Quản lý</a>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="course-name">Trí tuệ nhân tạo</div>
                                <div class="course-code">CS401</div>
                            </td>
                            <td><span class="course-badge">KHMT01</span></td>
                            <td>42 SV</td>
                            <td>
                                <div class="action-btns">
                                    <a href="#" class="btn-sm btn-view">Xem</a>
                                    <a href="#" class="btn-sm btn-edit">Quản lý</a>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div>
                <div class="card" style="margin-bottom: 20px;">
                    <div class="card-header">
                        <h2 class="card-title">Bài nộp gần đây</h2>
                        <a href="#" class="view-all">Xem tất cả →</a>
                    </div>
                    <div class="submission-item">
                        <div class="submission-info">
                            <h4>BT1: Lập trình C++</h4>
                            <p>Nguyễn Văn A - CNPM01</p>
                            <span class="submission-time">2 giờ trước</span>
                        </div>
                        <span class="status-badge pending">Chưa chấm</span>
                    </div>
                    <div class="submission-item">
                        <div class="submission-info">
                            <h4>BT2: Cơ sở dữ liệu</h4>
                            <p>Trần Thị B - CNPM02</p>
                            <span class="submission-time">5 giờ trước</span>
                        </div>
                        <span class="status-badge graded">Đã chấm: 8.5đ</span>
                    </div>
                    <div class="submission-item">
                        <div class="submission-info">
                            <h4>BT1: AI Project</h4>
                            <p>Lê Văn C - KHMT01</p>
                            <span class="submission-time">1 ngày trước</span>
                        </div>
                        <span class="status-badge late">Nộp muộn</span>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Lịch dạy hôm nay</h2>
                    </div>
                    <div class="schedule-timeline">
                        <div class="schedule-item">
                            <div class="schedule-time">07:30 - 09:30</div>
                            <div class="schedule-details">
                                <h4>Lập trình Web</h4>
                                <p>Lớp CNPM01 - Phòng A101</p>
                            </div>
                        </div>
                        <div class="schedule-item">
                            <div class="schedule-time">13:00 - 15:00</div>
                            <div class="schedule-details">
                                <h4>Cơ sở dữ liệu</h4>
                                <p>Lớp CNPM02 - Phòng B205</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script>
        // Active menu item
        document.querySelectorAll('.menu-item a').forEach(link => {
            if (link.href === window.location.href) {
                document.querySelectorAll('.menu-item a').forEach(l => l.classList.remove('active'));
                link.classList.add('active');
            }
        });
    </script>
}