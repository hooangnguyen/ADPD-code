@{
    var isPartial = ViewData["IsPartial"] as bool? ?? false;
    Layout = isPartial ? null : "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/Attendance.css?v=2.2" rel="stylesheet" asp-append-version="true" />

<div class="attendance-page-wrapper">
    <div class="container">
        <div class="header">
            <h1>
                <span style="font-size: 36px;">📋</span>
                Quản lý Điểm danh
            </h1>
            <p>Điểm danh sinh viên theo môn học và ngày học</p>
        </div>

        <div class="toolbar">
            <div class="filter-group">
                <label for="courseSelect">Chọn môn học:</label>
                <select id="courseSelect" class="filter-select">
                    <option value="">-- Chọn môn học --</option>
                    @if (ViewBag.Courses != null)
                    {
                        @foreach (var course in ViewBag.Courses)
                        {
                            <option value="@course.CourseID">@course.CourseName</option>
                        }
                    }
                </select>
            </div>

            <div class="filter-group">
                <label for="dateSelect">Ngày điểm danh:</label>
                <input type="date" id="dateSelect" class="filter-select" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
            </div>

            <div class="action-buttons">
                <button class="btn btn-primary" id="loadStudentsBtn" onclick="loadStudents()">
                    <span>📝</span>
                    <span>Tải danh sách</span>
                </button>
                <button class="btn btn-save" id="saveAttendanceBtn" onclick="saveAttendance()" disabled>
                    <span>💾</span>
                    <span>Lưu điểm danh</span>
                </button>
                <button class="btn btn-history" onclick="showHistory()">
                    <span>📊</span>
                    <span>Xem lịch sử</span>
                </button>
            </div>
        </div>

        <div id="courseInfo" class="course-info" style="display: none;">
            <h3>
                <span>📚</span>
                <span id="courseNameDisplay"></span>
            </h3>
            <p>📅 Ngày: <span id="dateDisplay"></span></p>
        </div>

        <div class="stats-grid" id="statsGrid" style="display: none;">
            <div class="stat-card">
                <h3 id="totalStudents">0</h3>
                <p>Tổng số sinh viên</p>
            </div>
            <div class="stat-card">
                <h3 id="presentCount">0</h3>
                <p>Có mặt</p>
            </div>
            <div class="stat-card">
                <h3 id="absentCount">0</h3>
                <p>Vắng</p>
            </div>
            <div class="stat-card">
                <h3 id="excusedCount">0</h3>
                <p>Có phép</p>
            </div>
        </div>

        <div class="table-container" id="attendanceTableContainer" style="display: none;">
            <table id="attendanceTable">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Mã SV</th>
                        <th>Họ và tên</th>
                        <th>Email</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody id="attendanceTableBody">
                </tbody>
            </table>
        </div>

        <div id="noDataMessage" class="no-data-message" style="display: none;">
            <p>Vui lòng chọn môn học và nhấn "Tải danh sách" để bắt đầu điểm danh.</p>
        </div>
    </div>

    <!-- Modal Lịch sử điểm danh -->
    <div id="historyModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>
                    <span>📊</span>
                    Lịch sử điểm danh
                </h2>
                <button class="close-btn" onclick="closeHistoryModal()">×</button>
            </div>
            <div class="modal-body">
                <div class="filter-group">
                    <label>Từ ngày:</label>
                    <input type="date" id="startDate" class="filter-select" />
                    <label>Đến ngày:</label>
                    <input type="date" id="endDate" class="filter-select" />
                    <button class="btn btn-primary" onclick="loadHistory()">Tải lịch sử</button>
                </div>
                <div id="historyContent" class="history-content"></div>
            </div>
        </div>
    </div>

    <script>
        let currentCourseId = null;
        let currentDate = null;
        let studentsData = [];

        // Đảm bảo DOM đã sẵn sàng
        function initAttendancePage() {
            const loadBtn = document.getElementById('loadStudentsBtn');
            const saveBtn = document.getElementById('saveAttendanceBtn');
            
            if (loadBtn) {
                loadBtn.addEventListener('click', loadStudents);
            }
            if (saveBtn) {
                saveBtn.addEventListener('click', saveAttendance);
            }
        }

        // Chạy khi DOM ready
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initAttendancePage);
        } else {
            initAttendancePage();
        }

        function loadStudents() {
            const courseId = document.getElementById('courseSelect').value;
            const date = document.getElementById('dateSelect').value;

            if (!courseId) {
                alert('Vui lòng chọn môn học!');
                return;
            }

            if (!date) {
                alert('Vui lòng chọn ngày điểm danh!');
                return;
            }

            currentCourseId = courseId;
            currentDate = date;

            // Hiển thị loading
            const loadBtn = document.getElementById('loadStudentsBtn');
            const originalText = loadBtn.innerHTML;
            loadBtn.innerHTML = '<span class="loading"></span> Đang tải...';
            loadBtn.disabled = true;
            
            document.getElementById('attendanceTableBody').innerHTML = '<tr><td colspan="6" style="text-align: center; padding: 40px;"><div class="loading" style="margin: 0 auto;"></div><p style="margin-top: 15px; color: #6c757d;">Đang tải danh sách sinh viên...</p></td></tr>';

            fetch(`/Lecturer/GetStudentsForAttendance?courseId=${courseId}&date=${date}`)
                .then(response => response.json())
                .then(data => {
                    loadBtn.innerHTML = originalText;
                    loadBtn.disabled = false;
                    
                    if (data.success) {
                        studentsData = data.students;
                        displayStudents(data.students);
                        document.getElementById('courseNameDisplay').textContent = data.courseName;
                        document.getElementById('dateDisplay').textContent = formatDate(data.date);
                        document.getElementById('courseInfo').style.display = 'block';
                        document.getElementById('attendanceTableContainer').style.display = 'block';
                        document.getElementById('statsGrid').style.display = 'grid';
                        document.getElementById('noDataMessage').style.display = 'none';
                        document.getElementById('saveAttendanceBtn').disabled = false;
                        updateStats();
                    } else {
                        alert('Lỗi: ' + data.message);
                    }
                })
                .catch(error => {
                    loadBtn.innerHTML = originalText;
                    loadBtn.disabled = false;
                    console.error('Error:', error);
                    alert('Có lỗi xảy ra khi tải danh sách sinh viên!');
                });
        }

        function displayStudents(students) {
            const tbody = document.getElementById('attendanceTableBody');
            tbody.innerHTML = '';

            students.forEach((student, index) => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${index + 1}</td>
                    <td><strong>${student.studentCode}</strong></td>
                    <td>${student.fullName}</td>
                    <td>${student.email}</td>
                    <td>
                        <span class="status-badge status-${getStatusClass(student.status)}">
                            ${student.status}
                        </span>
                    </td>
                    <td>
                        <select class="status-select" data-student-id="${student.studentId}" onchange="updateStudentStatus(${student.studentId}, this.value)">
                            <option value="Chưa điểm danh" ${student.status === 'Chưa điểm danh' ? 'selected' : ''}>Chưa điểm danh</option>
                            <option value="Có mặt" ${student.status === 'Có mặt' ? 'selected' : ''}>Có mặt</option>
                            <option value="Vắng" ${student.status === 'Vắng' ? 'selected' : ''}>Vắng</option>
                            <option value="Có phép" ${student.status === 'Có phép' ? 'selected' : ''}>Có phép</option>
                        </select>
                    </td>
                `;
                tbody.appendChild(row);
            });
        }

        function getStatusClass(status) {
            switch (status) {
                case 'Có mặt': return 'present';
                case 'Vắng': return 'absent';
                case 'Có phép': return 'excused';
                default: return 'pending';
            }
        }

        function updateStudentStatus(studentId, status) {
            const student = studentsData.find(s => s.studentId === studentId);
            if (student) {
                student.status = status;
                updateStats();
                updateStatusBadge(studentId, status);
            }
        }

        function updateStatusBadge(studentId, status) {
            const row = document.querySelector(`tr:has(select[data-student-id="${studentId}"])`);
            if (row) {
                const badge = row.querySelector('.status-badge');
                badge.textContent = status;
                badge.className = `status-badge status-${getStatusClass(status)}`;
            }
        }

        function updateStats() {
            const total = studentsData.length;
            const present = studentsData.filter(s => s.status === 'Có mặt').length;
            const absent = studentsData.filter(s => s.status === 'Vắng').length;
            const excused = studentsData.filter(s => s.status === 'Có phép').length;

            document.getElementById('totalStudents').textContent = total;
            document.getElementById('presentCount').textContent = present;
            document.getElementById('absentCount').textContent = absent;
            document.getElementById('excusedCount').textContent = excused;
        }

        function saveAttendance() {
            if (!currentCourseId || !currentDate) {
                alert('Vui lòng tải danh sách sinh viên trước!');
                return;
            }

            const records = studentsData.map(s => ({
                studentId: s.studentId,
                status: s.status
            }));

            const requestData = {
                courseId: parseInt(currentCourseId),
                date: currentDate,
                records: records
            };

            fetch('/Lecturer/SaveAttendance', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(requestData)
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('✅ ' + data.message);
                        loadStudents(); // Tải lại để cập nhật
                    } else {
                        alert('❌ ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Có lỗi xảy ra khi lưu điểm danh!');
                });
        }

        function showHistory() {
            const courseId = document.getElementById('courseSelect').value;
            if (!courseId) {
                alert('Vui lòng chọn môn học trước!');
                return;
            }

            currentCourseId = courseId;
            document.getElementById('historyModal').style.display = 'block';
            loadHistory();
        }

        function closeHistoryModal() {
            document.getElementById('historyModal').style.display = 'none';
        }

        function loadHistory() {
            const courseId = document.getElementById('courseSelect').value;
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;

            if (!courseId) {
                alert('Vui lòng chọn môn học!');
                return;
            }

            let url = `/Lecturer/GetAttendanceHistory?courseId=${courseId}`;
            if (startDate) url += `&startDate=${startDate}`;
            if (endDate) url += `&endDate=${endDate}`;

            document.getElementById('historyContent').innerHTML = '<p>Đang tải...</p>';

            fetch(url)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        displayHistory(data.history, data.courseName);
                    } else {
                        document.getElementById('historyContent').innerHTML = '<p>Lỗi: ' + data.message + '</p>';
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    document.getElementById('historyContent').innerHTML = '<p>Có lỗi xảy ra!</p>';
                });
        }

        function displayHistory(history, courseName) {
            const content = document.getElementById('historyContent');
            
            if (history.length === 0) {
                content.innerHTML = '<p>Chưa có lịch sử điểm danh.</p>';
                return;
            }

            let html = `<h3 style="color: #667eea; margin-bottom: 25px; font-size: 22px; display: flex; align-items: center; gap: 10px;"><span>📚</span> ${courseName}</h3>`;
            history.forEach(day => {
                html += `<div class="history-day">
                    <h4><span>📅</span> ${day.dateDisplay}</h4>
                    <table class="history-table">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tên sinh viên</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>`;
                day.records.forEach((record, index) => {
                    html += `<tr>
                        <td>${index + 1}</td>
                        <td>${record.studentName}</td>
                        <td><span class="status-badge status-${getStatusClass(record.status)}">${record.status}</span></td>
                    </tr>`;
                });
                html += `</tbody></table></div>`;
            });

            content.innerHTML = html;
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('vi-VN', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' });
        }

        // Đóng modal khi click bên ngoài
        window.onclick = function(event) {
            const modal = document.getElementById('historyModal');
            if (event.target === modal) {
                closeHistoryModal();
            }
        }
    </script>
</div>
