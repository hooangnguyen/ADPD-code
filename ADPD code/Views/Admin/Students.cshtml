@model IEnumerable<ADPD_code.Models.Student>
@{
    var isPartial = ViewData["IsPartial"] as bool? ?? false;
    Layout = isPartial ? null : "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/AdminDashboard.css?v=1.0" rel="stylesheet" asp-append-version="true" />

<div class="management-wrapper">
    <div class="management-header">
        <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 10px;">
            <div>
                <h1>
                    <span>üéì</span>
                    Student Management
                </h1>
                <p>Add, edit, or delete student information</p>
            </div>
            <a href="@Url.Action("Dashboard", "Admin")"
               class="btn btn-secondary"
               style="padding: 10px 20px; text-decoration: none; display: inline-flex; align-items: center; gap: 8px;"
               data-partial-url="@Url.Action("Dashboard", "Admin", new { partial = true })">
                ‚Üê Back to Dashboard
            </a>
        </div>
    </div>

    <div class="management-toolbar">
        <div class="search-container">
            <span class="search-icon">üîç</span>
            <input type="text" id="searchInput" placeholder="Search by name, student ID, email...">
        </div>
        <button type="button" class="btn btn-primary" onclick="showCreateModal()">
            ‚ûï Add Student
        </button>
    </div>

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Student ID</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Class</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="studentTableBody">
                @{
                    int index = 1;
                }
                @foreach (var student in Model)
                {
                    var className = student.StudentClasses?.FirstOrDefault()?.Class?.ClassName ?? "N/A";
                    <tr>
                        <td>@index</td>
                        <td><strong>@student.StudentId.ToString().PadLeft(10, '0')</strong></td>
                        <td>@student.FullName</td>
                        <td>@student.Email</td>
                        <td>@student.Phone</td>
                        <td>@className</td>
                        <td>
                            <span class="status-badge @(student.Status == "ƒêang h·ªçc" ? "status-active" : "status-inactive")">
                                @(student.Status == "ƒêang h·ªçc" ? "Active" : "Inactive")
                            </span>
                        </td>
                        <td>
                            <button type="button" class="btn btn-success edit-student-btn"
                                    style="padding: 6px 12px; font-size: 12px; margin-right: 5px;"
                                    data-student-id="@student.StudentId">
                                ‚úèÔ∏è Edit
                            </button>
                            <button type="button" class="btn btn-danger delete-student-btn"
                                    style="padding: 6px 12px; font-size: 12px;"
                                    data-student-id="@student.StudentId">
                                üóëÔ∏è Delete
                            </button>
                        </td>
                    </tr>
                    index++;
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Add/Edit Student -->
<div id="studentModal" class="modal" style="display: none;">
    <div class="modal-content compact-modal">
        <div class="modal-header">
            <h2 id="modalTitle">Edit Student</h2>
            <button type="button" class="close-btn" onclick="closeStudentModal()">√ó</button>
        </div>
        <form id="studentForm">
            <div class="modal-body grid-form">
                <input type="hidden" id="studentId" name="StudentId" />

                <div class="form-group">
                    <label>Full Name *</label>
                    <input type="text" id="fullName" name="FullName" required />
                </div>
                <div class="form-group">
                    <label>Gender *</label>
                    <select id="gender" name="Gender" required>
                        <option value="">-- Select --</option>
                        <option value="Nam">Male</option>
                        <option value="N·ªØ">Female</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Date of Birth *</label>
                    <input type="date" id="dob" name="DOB" required />
                </div>
                <div class="form-group">
                    <label>Email *</label>
                    <input type="email" id="email" name="Email" required />
                </div>
                <div class="form-group">
                    <label>Phone Number *</label>
                    <input type="tel" id="phone" name="Phone" required />
                </div>
                <div class="form-group">
                    <label>Address *</label>
                    <input type="text" id="address" name="Address" required />
                </div>
                <div class="form-group">
                    <label>Status *</label>
                    <select id="status" name="Status" required>
                        <option value="ƒêang h·ªçc">Active</option>
                        <option value="Ngh·ªâ h·ªçc">Inactive</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Class</label>
                    <select id="classId" name="ClassID">
                        <option value="">-- Select Class --</option>
                        @if (ViewBag.Classes != null)
                        {
                            @foreach (var cls in ViewBag.Classes)
                            {
                                <option value="@cls.ClassID">@cls.ClassName</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary compact-btn" onclick="closeStudentModal()">Cancel</button>
                <button type="submit" class="btn btn-primary compact-btn">Save</button>
            </div>
        </form>
    </div>
</div>

<style>
    .compact-modal {
        width: 500px;
        max-width: 95%;
        padding: 12px;
        font-size: 13px;
        overflow-y: auto;
        max-height: 90vh;
    }

    .grid-form {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 8px 12px;
    }

        .grid-form .form-group {
            margin-bottom: 6px;
        }

            .grid-form .form-group label {
                font-size: 12px;
                margin-bottom: 2px;
                display: block;
            }

            .grid-form .form-group input,
            .grid-form .form-group select {
                width: 100%;
                padding: 4px 6px;
                font-size: 12px;
                box-sizing: border-box;
            }

    .modal-footer {
        display: flex;
        justify-content: flex-end;
        gap: 6px;
        padding-top: 6px;
    }

    .compact-btn {
        padding: 4px 8px;
        font-size: 12px;
    }

    .status-badge {
        display: inline-block;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
    }

    .status-active {
        background: #d4edda;
        color: #155724;
    }

    .status-inactive {
        background: #f8d7da;
        color: #721c24;
    }
</style>

<script>
    (function() {
        'use strict';

        console.log('üîß Student Management Script Initialized');

        // ========== GLOBAL FUNCTIONS ==========
        window.showCreateModal = function() {
            console.log('üìù Opening Create Modal');
            const modal = document.getElementById('studentModal');
            const form = document.getElementById('studentForm');
            const title = document.getElementById('modalTitle');

            if (!modal || !form || !title) {
                console.error('‚ùå Modal elements not found');
                alert('Error opening form!');
                return;
            }

            title.textContent = 'Add Student';
            form.reset();
            document.getElementById('studentId').value = '';
            modal.style.display = 'block';
            console.log('‚úÖ Create Modal Opened');
        };

        window.closeStudentModal = function() {
            console.log('‚ùå Closing Modal');
            const modal = document.getElementById('studentModal');
            if (modal) {
                modal.style.display = 'none';
            }
        };

        // ========== EDIT STUDENT FUNCTION ==========
        function editStudent(studentId) {
            console.log('‚úèÔ∏è Editing student:', studentId);

            fetch(`/Admin/EditStudent/${studentId}`, {
                method: 'GET',
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                }
            })
            .then(response => {
                console.log('üì° Response status:', response.status);
                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}`);
                }
                return response.json();
            })
            .then(data => {
                console.log('üì¶ Received data:', data);

                if (data.success && data.student) {
                    fillEditForm(data.student);
                } else {
                    alert('‚ùå ' + (data.message || 'Student not found'));
                }
            })
            .catch(error => {
                console.error('‚ùå Error:', error);
                alert('Error loading student info: ' + error.message);
            });
        }

        // ========== FILL EDIT FORM ==========
        function fillEditForm(student) {
            console.log('üìù Filling form with:', student);

            const modal = document.getElementById('studentModal');
            const title = document.getElementById('modalTitle');

            if (!modal || !title) {
                console.error('‚ùå Modal elements not found');
                return;
            }

            title.textContent = 'Edit Student';
            document.getElementById('studentId').value = student.StudentId || '';
            document.getElementById('fullName').value = student.FullName || '';
            document.getElementById('gender').value = student.Gender || '';
            document.getElementById('dob').value = student.DOB || '';
            document.getElementById('email').value = student.Email || '';
            document.getElementById('phone').value = student.Phone || '';
            document.getElementById('address').value = student.Address || '';
            document.getElementById('status').value = student.Status || '';
            document.getElementById('classId').value = student.ClassID || '';

            modal.style.display = 'block';
            console.log('‚úÖ Edit Modal Opened');
        }

        // ========== DELETE STUDENT FUNCTION ==========
        function deleteStudent(studentId) {
            console.log('üóëÔ∏è Deleting student:', studentId);

            if (!confirm('Are you sure you want to delete this student?')) {
                return;
            }

            fetch(`/Admin/DeleteStudent/${studentId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                }
            })
            .then(response => {
                if (!response.ok) {
                    return response.text().then(text => {
                        throw new Error(`HTTP ${response.status}: ${text}`);
                    });
                }
                return response.json();
            })
            .then(data => {
                if (data.success) {
                    alert('‚úÖ ' + data.message);
                    location.reload();
                } else {
                    alert('‚ùå ' + (data.message || 'Error occurred'));
                }
            })
            .catch(error => {
                console.error('‚ùå Error:', error);
                alert('Error deleting student: ' + error.message);
            });
        }

        // ========== FORM SUBMIT HANDLER ==========
        function handleFormSubmit(e) {
            e.preventDefault();
            e.stopPropagation();

            console.log('üì§ Form Submit Triggered');

            const studentId = document.getElementById('studentId').value.trim();
            const fullName = document.getElementById('fullName').value.trim();
            const gender = document.getElementById('gender').value.trim();
            const dob = document.getElementById('dob').value.trim();
            const email = document.getElementById('email').value.trim();
            const phone = document.getElementById('phone').value.trim();
            const address = document.getElementById('address').value.trim();
            const status = document.getElementById('status').value.trim();
            const classId = document.getElementById('classId').value.trim();

            // Validation
            if (!fullName || !gender || !dob || !email || !phone || !address || !status) {
                alert('‚ùå Please fill in all required fields!');
                return false;
            }

            const data = {
                FullName: fullName,
                Gender: gender,
                DOB: dob,
                Email: email,
                Phone: phone,
                Address: address,
                Status: status,
                ClassID: classId ? parseInt(classId) : null
            };

            let url = '/Admin/CreateStudent';
            let mode = 'CREATE';

            if (studentId && studentId !== '0' && studentId !== '') {
                url = `/Admin/EditStudent/${studentId}`;
                data.StudentId = parseInt(studentId);
                mode = 'EDIT';
            }

            console.log(`üì° ${mode} Mode - URL:`, url);
            console.log('üì¶ Data:', data);

            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                },
                credentials: 'same-origin',
                body: JSON.stringify(data)
            })
            .then(response => {
                console.log('üì° Response status:', response.status);
                if (!response.ok) {
                    return response.text().then(text => {
                        throw new Error(`HTTP ${response.status}: ${text}`);
                    });
                }
                return response.json();
            })
            .then(responseData => {
                console.log('‚úÖ Success:', responseData);
                if (responseData.success) {
                    alert('‚úÖ ' + responseData.message);
                    closeStudentModal();
                    setTimeout(() => location.reload(), 500);
                } else {
                    alert('‚ùå ' + (responseData.message || 'Error occurred'));
                }
            })
            .catch(error => {
                console.error('‚ùå Fetch error:', error);
                alert('‚ùå Error: ' + error.message);
            });

            return false;
        }

        // ========== SEARCH FUNCTIONALITY ==========
        function initSearch() {
            const searchInput = document.getElementById('searchInput');
            if (searchInput) {
                searchInput.addEventListener('input', function() {
                    const searchTerm = this.value.toLowerCase();
                    const rows = document.querySelectorAll('#studentTableBody tr');

                    rows.forEach(row => {
                        const text = row.textContent.toLowerCase();
                        row.style.display = text.includes(searchTerm) ? '' : 'none';
                    });
                });
                console.log('‚úÖ Search initialized');
            }
        }

        // ========== INITIALIZATION ==========
        function init() {
            console.log('üöÄ Initializing Student Management');

            // Attach form submit handler
            const form = document.getElementById('studentForm');
            if (form) {
                form.removeEventListener('submit', handleFormSubmit); // Remove old listener
                form.addEventListener('submit', handleFormSubmit);
                console.log('‚úÖ Form handler attached');
            }

            // Attach edit button handlers
            document.querySelectorAll('.edit-student-btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    const studentId = this.getAttribute('data-student-id');
                    console.log('üñ±Ô∏è Edit button clicked:', studentId);
                    editStudent(studentId);
                });
            });
            console.log('‚úÖ Edit buttons initialized:', document.querySelectorAll('.edit-student-btn').length);

            // Attach delete button handlers
            document.querySelectorAll('.delete-student-btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    const studentId = this.getAttribute('data-student-id');
                    console.log('üñ±Ô∏è Delete button clicked:', studentId);
                    deleteStudent(studentId);
                });
            });
            console.log('‚úÖ Delete buttons initialized:', document.querySelectorAll('.delete-student-btn').length);

            // Initialize search
            initSearch();

            // Close modal when clicking outside
            window.onclick = function(event) {
                const modal = document.getElementById('studentModal');
                if (event.target === modal) {
                    closeStudentModal();
                }
            };

            console.log('‚úÖ Student Management Initialized Successfully');
        }

        // Run initialization
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', init);
        } else {
            init();
        }
    })();
</script>