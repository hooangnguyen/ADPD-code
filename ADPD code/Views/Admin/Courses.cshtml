@model IEnumerable<ADPD_code.Models.Course>
@{
    var isPartial = ViewData["IsPartial"] as bool? ?? false;
    Layout = isPartial ? null : "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/AdminDashboard.css?v=1.0" rel="stylesheet" asp-append-version="true" />

<div class="management-wrapper">
    <div class="management-header">
        <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 10px;">
            <div>
                <h1>
                    <span>üìö</span>
                    Course Management
                </h1>
                <p>Add, edit, delete course information</p>
            </div>
            <a href="@Url.Action("Dashboard", "Admin")"
               class="btn btn-secondary"
               style="padding: 10px 20px; text-decoration: none; display: inline-flex; align-items: center; gap: 8px;"
               data-partial-url="@Url.Action("Dashboard", "Admin", new { partial = true })">
                ‚Üê Back to Dashboard
            </a>
        </div>
    </div>

    <div class="management-toolbar">
        <div class="search-container">
            <span class="search-icon">üîç</span>
            <input type="text" id="searchInput" placeholder="Search by course name...">
        </div>
        <button type="button" class="btn btn-primary" onclick="showCreateModal()">
            ‚ûï Add Course
        </button>
    </div>

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Course ID</th>
                    <th>Course Name</th>
                    <th>Credits</th>
                    <th>Lecturer</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="courseTableBody">
                @{
                    int index = 1;
                }
                @foreach (var course in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td><strong>@course.CourseID.ToString().PadLeft(5, '0')</strong></td>
                        <td>@course.CourseName</td>
                        <td>@course.Credits</td>
                        <td>@(course.Lecturer?.FullName ?? "Unassigned")</td>
                        <td>@(course.Description ?? "N/A")</td>
                        <td>
                            <button type="button" class="btn btn-success" style="padding: 6px 12px; font-size: 12px; margin-right: 5px;" onclick="editCourse(@course.CourseID)">‚úèÔ∏è Edit</button>
                            <button type="button" class="btn btn-danger" style="padding: 6px 12px; font-size: 12px;" onclick="deleteCourse(@course.CourseID)">üóëÔ∏è Delete</button>
                        </td>
                    </tr>
                    index++;
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Add/Edit Course -->
<div id="courseModal" class="modal" style="display: none;">
    <div class="modal-content">
        <div class="modal-header">
            <h2 id="modalTitle">Add Course</h2>
            <button type="button" class="close-btn" onclick="closeModal()">√ó</button>
        </div>
        <form id="courseForm">
            <div class="modal-body">
                <input type="hidden" id="courseId" name="CourseID" />
                <div class="form-group">
                    <label>Course Name *</label>
                    <input type="text" id="courseName" name="CourseName" required />
                </div>
                <div class="form-group">
                    <label>Credits *</label>
                    <input type="number" id="credits" name="Credits" min="1" max="10" required />
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea id="description" name="Description" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label>Lecturer</label>
                    <select id="lecturerId" name="LecturerID">
                        <option value="">-- Select Lecturer --</option>
                        @if (ViewBag.Lecturers != null)
                        {
                            @foreach (var lecturer in ViewBag.Lecturers)
                            {
                                <option value="@lecturer.LecturerID">@lecturer.FullName</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" onclick="closeModal()" style="background: #6c757d; color: white;">Cancel</button>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

<script>
    (function() {
        'use strict';

        window.showCreateModal = function() {
            const modal = document.getElementById('courseModal');
            const form = document.getElementById('courseForm');
            const title = document.getElementById('modalTitle');
            const courseId = document.getElementById('courseId');

            if (!modal || !form || !title || !courseId) {
                alert('Error opening form!');
                return;
            }

            title.textContent = 'Add Course';
            form.reset();
            courseId.value = '';
            modal.style.display = 'block';
            setTimeout(initFormHandlers, 100);
        };

        window.editCourse = function(id) {
            fetch(`/Admin/EditCourse/${id}`)
                .then(res => res.ok ? res.json() : Promise.reject(`HTTP ${res.status}`))
                .then(data => {
                    if (data.success && data.course) fillEditForm(data.course);
                    else alert('‚ùå ' + (data.message || 'Course not found'));
                })
                .catch(err => alert('Error loading course: ' + err));
        };

        function fillEditForm(course) {
            const modal = document.getElementById('courseModal');
            const title = document.getElementById('modalTitle');
            title.textContent = 'Edit Course';

            document.getElementById('courseId').value = course.CourseID || '';
            document.getElementById('courseName').value = course.CourseName || '';
            document.getElementById('credits').value = course.Credits || '';
            document.getElementById('description').value = course.Description || '';
            document.getElementById('lecturerId').value = course.LecturerID || '';

            modal.style.display = 'block';
        }

        window.deleteCourse = function(id) {
            if (!confirm('Are you sure you want to delete this course?')) return;

            fetch(`/Admin/DeleteCourse/${id}`, { method: 'POST', headers: { 'Content-Type': 'application/json', 'Accept': 'application/json' } })
                .then(res => res.ok ? res.json() : res.text().then(t => Promise.reject(`HTTP ${res.status}: ${t}`)))
                .then(data => { if (data.success) location.reload(); else alert('‚ùå ' + (data.message || 'Error')); })
                .catch(err => alert('Error deleting course: ' + err));
        };

        window.closeModal = function() {
            document.getElementById('courseModal').style.display = 'none';
        };

        function initFormHandlers() {
            const form = document.getElementById('courseForm');
            if (form && form.dataset.listenerAttached !== 'true') {
                form.addEventListener('submit', handleFormSubmit);
                form.dataset.listenerAttached = 'true';
            }

            const searchInput = document.getElementById('searchInput');
            if (searchInput && searchInput.dataset.listenerAttached !== 'true') {
                searchInput.addEventListener('input', function() {
                    const term = this.value.toLowerCase();
                    document.querySelectorAll('#courseTableBody tr').forEach(row => row.style.display = row.textContent.toLowerCase().includes(term) ? '' : 'none');
                });
                searchInput.dataset.listenerAttached = 'true';
            }

            window.onclick = e => { if (e.target === document.getElementById('courseModal')) closeModal(); };
        }

        function handleFormSubmit(e) {
            e.preventDefault();
            const courseId = document.getElementById('courseId').value.trim();
            const courseName = document.getElementById('courseName').value.trim();
            const credits = document.getElementById('credits').value.trim();
            const description = document.getElementById('description').value.trim();
            const lecturerId = document.getElementById('lecturerId').value.trim();

            if (!courseName) { alert('‚ùå Please enter course name'); return false; }
            if (!credits || isNaN(credits) || credits < 1 || credits > 10) { alert('‚ùå Credits must be between 1 and 10'); return false; }

            const data = { CourseName: courseName, Credits: parseInt(credits), Description: description || '', LecturerID: lecturerId ? parseInt(lecturerId) : null };
            let url = '/Admin/CreateCourse';
            if (courseId && courseId !== '0') { url = `/Admin/EditCourse/${courseId}`; data.CourseID = parseInt(courseId); }

            fetch(url, { method: 'POST', headers: { 'Content-Type': 'application/json', 'Accept': 'application/json' }, credentials: 'same-origin', body: JSON.stringify(data) })
                .then(res => res.ok ? res.json() : res.text().then(t => Promise.reject(`HTTP ${res.status}: ${t}`)))
                .then(resp => { if (resp.success) { closeModal(); location.reload(); } else alert('‚ùå ' + (resp.message || 'Error')); })
                .catch(err => alert('‚ùå Error: ' + err));

            return false;
        }

        document.readyState === 'loading' ? document.addEventListener('DOMContentLoaded', initFormHandlers) : initFormHandlers();
    })();
</script>
