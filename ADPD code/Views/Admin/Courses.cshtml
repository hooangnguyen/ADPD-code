</div>

<!-- Modal Th√™m/S·ª≠a M√¥n h·ªçc -->
<div id="courseModal" class="modal" style="display: none;">
    <div class="modal-content">
        <div class="modal-header">
            <h2 id="modalTitle">Th√™m M√¥n h·ªçc</h2>
            <button type="button" class="close-btn" onclick="closeModal()">√ó</button>
        </div>
        <form id="courseForm">
            <div class="modal-body">
                <input type="hidden" id="courseId" name="CourseID" />
                <div class="form-group">
                    <label>T√™n m√¥n h·ªçc *</label>
                    <input type="text" id="courseName" name="CourseName" required />
                </div>
                <div class="form-group">
                    <label>S·ªë t√≠n ch·ªâ *</label>
                    <input type="number" id="credits" name="Credits" min="1" max="10" required />
                </div>
                <div class="form-group">
                    <label>M√¥ t·∫£</label>
                    <textarea id="description" name="Description" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label>Gi·∫£ng vi√™n</label>
                    <select id="lecturerId" name="LecturerID">
                        <option value="">-- Ch·ªçn gi·∫£ng vi√™n --</option>
                        @if (ViewBag.Lecturers != null)
                        {
                            @foreach (var lecturer in ViewBag.Lecturers)
                            {
                                <option value="@lecturer.LecturerID">@lecturer.FullName</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" onclick="closeModal()" style="background: #6c757d; color: white;">H·ªßy</button>
                <button type="submit" class="btn btn-primary">L∆∞u</button>
            </div>
        </form>
    </div>
</div>

<script>
    (function() {
        'use strict';

        window.showCreateModal = function() {
            console.log('showCreateModal called');
            const modal = document.getElementById('courseModal');
            const form = document.getElementById('courseForm');
            const title = document.getElementById('modalTitle');
            const courseId = document.getElementById('courseId');

            if (!modal || !form || !title || !courseId) {
                console.error('Modal elements not found');
                alert('C√≥ l·ªói x·∫£y ra khi m·ªü form!');
                return;
            }

            title.textContent = 'Th√™m M√¥n h·ªçc';
            form.reset();
            courseId.value = '';
            modal.style.display = 'block';
            setTimeout(initFormHandlers, 100);
        };

        window.editCourse = function(id) {
            console.log('editCourse called with id:', id);
            fetch(`/Admin/EditCourse/${id}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    console.log('Edit response:', data);
                    if (data.success && data.course) {
                        fillEditForm(data.course);
                    } else {
                        alert('‚ùå ' + (data.message || 'Kh√¥ng t√¨m th·∫•y m√¥n h·ªçc'));
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('C√≥ l·ªói x·∫£y ra khi t·∫£i th√¥ng tin m√¥n h·ªçc: ' + error.message);
                });
        };

        function fillEditForm(course) {
            const modal = document.getElementById('courseModal');
            const title = document.getElementById('modalTitle');

            if (!modal || !title) {
                console.error('Modal elements not found');
                return;
            }

            title.textContent = 'S·ª≠a M√¥n h·ªçc';

            // ƒê·∫∑t gi√° tr·ªã cho c√°c field
            document.getElementById('courseId').value = course.CourseID || '';
            document.getElementById('courseName').value = course.CourseName || '';
            document.getElementById('credits').value = course.Credits || '';
            document.getElementById('description').value = course.Description || '';
            document.getElementById('lecturerId').value = course.LecturerID || '';

            modal.style.display = 'block';
        }

        window.deleteCourse = function(id) {
            console.log('deleteCourse called with id:', id);
            if (!confirm('B·∫°n c√≥ ch·∫Øc ch·∫Øn mu·ªën x√≥a m√¥n h·ªçc n√†y?')) {
                return;
            }

            fetch(`/Admin/DeleteCourse/${id}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                }
            })
                .then(response => {
                    if (!response.ok) {
                        return response.text().then(text => {
                            throw new Error(`HTTP ${response.status}: ${text}`);
                        });
                    }
                    return response.json();
                })
                .then(data => {
                    console.log('Delete response:', data);
                    if (data.success) {
                        alert('‚úÖ ' + data.message);
                        location.reload();
                    } else {
                        alert('‚ùå ' + (data.message || 'C√≥ l·ªói x·∫£y ra'));
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('C√≥ l·ªói x·∫£y ra khi x√≥a m√¥n h·ªçc: ' + error.message);
                });
        };

        window.closeModal = function() {
            const modal = document.getElementById('courseModal');
            if (modal) {
                modal.style.display = 'none';
            }
        };

        function initFormHandlers() {
            const form = document.getElementById('courseForm');

            if (form && form.dataset.listenerAttached !== 'true') {
                form.addEventListener('submit', handleFormSubmit);
                form.dataset.listenerAttached = 'true';
            }

            const searchInput = document.getElementById('searchInput');
            if (searchInput && searchInput.dataset.listenerAttached !== 'true') {
                searchInput.addEventListener('input', function() {
                    const searchTerm = this.value.toLowerCase();
                    const rows = document.querySelectorAll('#courseTableBody tr');
                    rows.forEach(row => {
                        const text = row.textContent.toLowerCase();
                        row.style.display = text.includes(searchTerm) ? '' : 'none';
                    });
                });
                searchInput.dataset.listenerAttached = 'true';
            }

            window.onclick = function(event) {
                const modal = document.getElementById('courseModal');
                if (event.target === modal) {
                    closeModal();
                }
            };
        }

        function handleFormSubmit(e) {
            e.preventDefault();
            e.stopPropagation();

            console.log('Form submit triggered');

            // L·∫•y gi√° tr·ªã t·ª´ c√°c input
            const courseId = document.getElementById('courseId').value.trim();
            const courseName = document.getElementById('courseName').value.trim();
            const credits = document.getElementById('credits').value.trim();
            const description = document.getElementById('description').value.trim();
            const lecturerId = document.getElementById('lecturerId').value.trim();

            // Validate b·∫Øt bu·ªôc
            if (!courseName) {
                alert('‚ùå Vui l√≤ng nh·∫≠p T√™n m√¥n h·ªçc');
                return false;
            }
            if (!credits || isNaN(credits) || credits < 1 || credits > 10) {
                alert('‚ùå S·ªë t√≠n ch·ªâ ph·∫£i t·ª´ 1 ƒë·∫øn 10');
                return false;
            }

            // T·∫°o object d·ªØ li·ªáu
            const data = {
                CourseName: courseName,
                Credits: parseInt(credits),
                Description: description || '',
                LecturerID: lecturerId ? parseInt(lecturerId) : null
            };

            // X√°c ƒë·ªãnh URL v√† th√™m CourseID n·∫øu s·ª≠a
            let url = '/Admin/CreateCourse';
            if (courseId && courseId !== '0') {
                url = `/Admin/EditCourse/${courseId}`;
                data.CourseID = parseInt(courseId);
                console.log('MODE: EDIT - Course ID:', courseId);
            } else {
                console.log('MODE: CREATE');
            }

            const jsonBody = JSON.stringify(data);
            console.log('üì§ Sending to:', url);
            console.log('üì¶ Data:', data);
            console.log('üìÑ JSON:', jsonBody);

            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                },
                credentials: 'same-origin',
                body: jsonBody
            })
                .then(response => {
                    console.log('üì® Response status:', response.status);
                    if (!response.ok) {
                        return response.text().then(text => {
                            console.error('‚ùå Error response:', text);
                            throw new Error(`HTTP ${response.status}: ${text}`);
                        });
                    }
                    return response.json();
                })
                .then(responseData => {
                    console.log('‚úÖ Response data:', responseData);
                    if (responseData.success) {
                        alert('‚úÖ ' + responseData.message);
                        closeModal();
                        setTimeout(() => {
                            location.reload();
                        }, 500);
                    } else {
                        alert('‚ùå ' + (responseData.message || 'C√≥ l·ªói x·∫£y ra'));
                    }
                })
                .catch(error => {
                    console.error('‚ùå Fetch error:', error);
                    alert('‚ùå L·ªói: ' + error.message);
                });

            return false;
        }

        // Kh·ªüi t·∫°o khi DOM s·∫µn s√†ng
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initFormHandlers);
        } else {
            initFormHandlers();
        }
    })();
</script>
