<!-- Modal Th√™m/S·ª≠a Gi·∫£ng vi√™n -->
<div id="lecturerModal" class="modal" style="display: none;">
    <div class="modal-content">
        <div class="modal-header">
            <h2 id="modalTitle">Th√™m Gi·∫£ng vi√™n</h2>
            <button type="button" class="close-btn" onclick="closeModal()">√ó</button>
        </div>
        <form id="lecturerForm">
            <div class="modal-body">
                <input type="hidden" id="lecturerId" name="LecturerID" />
                <div class="form-group">
                    <label>H·ªç v√† t√™n *</label>
                    <input type="text" id="fullName" name="FullName" required />
                </div>
                <div class="form-group">
                    <label>Email *</label>
                    <input type="email" id="email" name="Email" required />
                </div>
                <div class="form-group">
                    <label>S·ªë ƒëi·ªán tho·∫°i</label>
                    <input type="tel" id="phone" name="Phone" />
                </div>
                <div class="form-group">
                    <label>Khoa</label>
                    <select id="departmentId" name="DepartmentID">
                        <option value="">-- Ch·ªçn khoa --</option>
                        @if (ViewBag.Departments != null)
                        {
                            @foreach (var dept in ViewBag.Departments)
                            {
                                <option value="@dept.DepartmentID">@dept.DepartmentName</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" onclick="closeModal()" style="background: #6c757d; color: white;">H·ªßy</button>
                <button type="submit" class="btn btn-primary">L∆∞u</button>
            </div>
        </form>
    </div>
</div>

<script>
    (function() {
        'use strict';
        
        window.showCreateModal = function() {
            console.log('showCreateModal called');
            const modal = document.getElementById('lecturerModal');
            const form = document.getElementById('lecturerForm');
            const title = document.getElementById('modalTitle');
            const lecturerId = document.getElementById('lecturerId');
            
            if (!modal || !form || !title || !lecturerId) {
                console.error('Modal elements not found');
                alert('C√≥ l·ªói x·∫£y ra khi m·ªü form!');
                return;
            }
            
            title.textContent = 'Th√™m Gi·∫£ng vi√™n';
            form.reset();
            lecturerId.value = '';
            modal.style.display = 'block';
            setTimeout(initFormHandlers, 100);
        };

        window.editLecturer = function(id) {
            console.log('editLecturer called with id:', id);
            fetch(`/Admin/EditLecturer/${id}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    console.log('Edit response:', data);
                    if (data.success && data.lecturer) {
                        fillEditForm(data.lecturer);
                    } else {
                        alert('‚ùå ' + (data.message || 'Kh√¥ng t√¨m th·∫•y gi·∫£ng vi√™n'));
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('C√≥ l·ªói x·∫£y ra khi t·∫£i th√¥ng tin gi·∫£ng vi√™n!');
                });
        };

        function fillEditForm(lecturer) {
            const modal = document.getElementById('lecturerModal');
            const title = document.getElementById('modalTitle');
            
            if (!modal || !title) {
                console.error('Modal elements not found');
                return;
            }
            
            title.textContent = 'S·ª≠a Gi·∫£ng vi√™n';
            document.getElementById('lecturerId').value = lecturer.LecturerID;
            document.getElementById('fullName').value = lecturer.FullName || '';
            document.getElementById('email').value = lecturer.Email || '';
            document.getElementById('phone').value = lecturer.Phone || '';
            if (lecturer.DepartmentID) {
                document.getElementById('departmentId').value = lecturer.DepartmentID;
            }
            modal.style.display = 'block';
            setTimeout(initFormHandlers, 100);
        }

        window.deleteLecturer = function(id) {
            console.log('deleteLecturer called with id:', id);
            if (!confirm('B·∫°n c√≥ ch·∫Øc ch·∫Øn mu·ªën x√≥a gi·∫£ng vi√™n n√†y?')) {
                return;
            }

            fetch(`/Admin/DeleteLecturer/${id}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                }
            })
                .then(response => {
                    if (!response.ok) {
                        return response.text().then(text => {
                            throw new Error(`HTTP ${response.status}: ${text}`);
                        });
                    }
                    return response.json();
                })
                .then(data => {
                    console.log('Delete response:', data);
                    if (data.success) {
                        alert('‚úÖ ' + data.message);
                        location.reload();
                    } else {
                        alert('‚ùå ' + (data.message || 'C√≥ l·ªói x·∫£y ra'));
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('C√≥ l·ªói x·∫£y ra khi x√≥a gi·∫£ng vi√™n: ' + error.message);
                });
        };

        window.closeModal = function() {
            const modal = document.getElementById('lecturerModal');
            if (modal) {
                modal.style.display = 'none';
            }
        };

        function initFormHandlers() {
            const form = document.getElementById('lecturerForm');
            if (form) {
                if (form.dataset.listenerAttached === 'true') {
                    return;
                }
                
                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    
                    console.log('Form submit triggered');
                    
                    const lecturerId = document.getElementById('lecturerId')?.value || '';
                    const data = {
                        FullName: document.getElementById('fullName').value,
                        Email: document.getElementById('email').value,
                        Phone: document.getElementById('phone').value || '',
                        DepartmentID: document.getElementById('departmentId').value ? parseInt(document.getElementById('departmentId').value) : null
                    };

                    let url = '/Admin/CreateLecturer';
                    
                    if (lecturerId && lecturerId !== '' && lecturerId !== '0') {
                        url = `/Admin/EditLecturer/${parseInt(lecturerId)}`;
                        data.LecturerID = parseInt(lecturerId);
                    }

                    const jsonBody = JSON.stringify(data);
                    
                    console.log('Sending data:', data);
                    console.log('URL:', url);
                    console.log('JSON string:', jsonBody);

                    if (!jsonBody || jsonBody === '{}') {
                        alert('L·ªói: D·ªØ li·ªáu kh√¥ng h·ª£p l·ªá!');
                        return false;
                    }

                    fetch(url, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Accept': 'application/json'
                        },
                        credentials: 'same-origin',
                        body: jsonBody
                    })
                        .then(response => {
                            console.log('Response status:', response.status);
                            if (!response.ok) {
                                return response.text().then(text => {
                                    console.error('Error response:', text);
                                    throw new Error(`HTTP ${response.status}: ${text}`);
                                });
                            }
                            return response.json();
                        })
                        .then(data => {
                            console.log('Response data:', data);
                            if (data.success) {
                                alert('‚úÖ ' + data.message);
                                closeModal();
                                setTimeout(() => {
                                    location.reload();
                                }, 500);
                            } else {
                                alert('‚ùå ' + (data.message || 'C√≥ l·ªói x·∫£y ra'));
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            alert('C√≥ l·ªói x·∫£y ra: ' + error.message);
                        });
                    
                    return false;
                });
                
                form.dataset.listenerAttached = 'true';
            }

            const searchInput = document.getElementById('searchInput');
            if (searchInput) {
                searchInput.addEventListener('input', function() {
                    const searchTerm = this.value.toLowerCase();
                    const rows = document.querySelectorAll('#lecturerTableBody tr');
                    
                    rows.forEach(row => {
                        const text = row.textContent.toLowerCase();
                        row.style.display = text.includes(searchTerm) ? '' : 'none';
                    });
                });
            }

            window.onclick = function(event) {
                const modal = document.getElementById('lecturerModal');
                if (event.target === modal) {
                    closeModal();
                }
            };
        }

        initFormHandlers();
        setTimeout(initFormHandlers, 200);
        
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', function() {
                setTimeout(initFormHandlers, 100);
            });
        } else {
            setTimeout(initFormHandlers, 100);
        }
    })();
</script>
