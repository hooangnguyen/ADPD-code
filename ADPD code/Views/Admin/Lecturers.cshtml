<script>
    (function() {
        'use strict';

        window.showCreateModal = function() {
            console.log('showCreateModal called');
            const modal = document.getElementById('lecturerModal');
            const form = document.getElementById('lecturerForm');
            const title = document.getElementById('modalTitle');
            const lecturerId = document.getElementById('lecturerId');

            if (!modal || !form || !title || !lecturerId) {
                console.error('Modal elements not found');
                alert('CÃ³ lá»—i xáº£y ra khi má»Ÿ form!');
                return;
            }

            title.textContent = 'ThÃªm Giáº£ng viÃªn';
            form.reset();
            lecturerId.value = '';
            modal.style.display = 'block';
            setTimeout(initFormHandlers, 100);
        };

        window.editLecturer = function(id) {
            console.log('editLecturer called with id:', id);
            fetch(`/Admin/EditLecturer/${id}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    console.log('Edit response:', data);
                    if (data.success && data.lecturer) {
                        fillEditForm(data.lecturer);
                    } else {
                        alert('âŒ ' + (data.message || 'KhÃ´ng tÃ¬m tháº¥y giáº£ng viÃªn'));
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('CÃ³ lá»—i xáº£y ra khi táº£i thÃ´ng tin giáº£ng viÃªn: ' + error.message);
                });
        };

        function fillEditForm(lecturer) {
            const modal = document.getElementById('lecturerModal');
            const title = document.getElementById('modalTitle');

            if (!modal || !title) {
                console.error('Modal elements not found');
                return;
            }

            title.textContent = 'Sá»­a Giáº£ng viÃªn';

            // Äáº·t giÃ¡ trá»‹ cho cÃ¡c field
            document.getElementById('lecturerId').value = lecturer.LecturerID || '';
            document.getElementById('fullName').value = lecturer.FullName || '';
            document.getElementById('email').value = lecturer.Email || '';
            document.getElementById('phone').value = lecturer.Phone || '';
            document.getElementById('departmentId').value = lecturer.DepartmentID || '';

            modal.style.display = 'block';
        }

        window.deleteLecturer = function(id) {
            console.log('deleteLecturer called with id:', id);
            if (!confirm('Báº¡n cÃ³ cháº¯c cháº¯n muá»‘n xÃ³a giáº£ng viÃªn nÃ y?')) {
                return;
            }

            fetch(`/Admin/DeleteLecturer/${id}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                }
            })
                .then(response => {
                    if (!response.ok) {
                        return response.text().then(text => {
                            throw new Error(`HTTP ${response.status}: ${text}`);
                        });
                    }
                    return response.json();
                })
                .then(data => {
                    console.log('Delete response:', data);
                    if (data.success) {
                        alert('âœ… ' + data.message);
                        location.reload();
                    } else {
                        alert('âŒ ' + (data.message || 'CÃ³ lá»—i xáº£y ra'));
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('CÃ³ lá»—i xáº£y ra khi xÃ³a giáº£ng viÃªn: ' + error.message);
                });
        };

        window.closeModal = function() {
            const modal = document.getElementById('lecturerModal');
            if (modal) {
                modal.style.display = 'none';
            }
        };

        function initFormHandlers() {
            const form = document.getElementById('lecturerForm');

            if (form && form.dataset.listenerAttached !== 'true') {
                form.addEventListener('submit', handleFormSubmit);
                form.dataset.listenerAttached = 'true';
            }

            const searchInput = document.getElementById('searchInput');
            if (searchInput && searchInput.dataset.listenerAttached !== 'true') {
                searchInput.addEventListener('input', function() {
                    const searchTerm = this.value.toLowerCase();
                    const rows = document.querySelectorAll('#lecturerTableBody tr');
                    rows.forEach(row => {
                        const text = row.textContent.toLowerCase();
                        row.style.display = text.includes(searchTerm) ? '' : 'none';
                    });
                });
                searchInput.dataset.listenerAttached = 'true';
            }

            window.onclick = function(event) {
                const modal = document.getElementById('lecturerModal');
                if (event.target === modal) {
                    closeModal();
                }
            };
        }

        function handleFormSubmit(e) {
            e.preventDefault();
            e.stopPropagation();

            console.log('Form submit triggered');

            // Láº¥y giÃ¡ trá»‹ tá»« cÃ¡c input
            const lecturerId = document.getElementById('lecturerId').value.trim();
            const fullName = document.getElementById('fullName').value.trim();
            const email = document.getElementById('email').value.trim();
            const phone = document.getElementById('phone').value.trim();
            const departmentId = document.getElementById('departmentId').value.trim();

            // Validate báº¯t buá»™c
            if (!fullName) {
                alert('âŒ Vui lÃ²ng nháº­p Há» vÃ  tÃªn');
                return false;
            }
            if (!email) {
                alert('âŒ Vui lÃ²ng nháº­p Email');
                return false;
            }

            // Táº¡o object dá»¯ liá»‡u
            const data = {
                FullName: fullName,
                Email: email,
                Phone: phone || '',
                DepartmentID: departmentId ? parseInt(departmentId) : null
            };

            // XÃ¡c Ä‘á»‹nh URL vÃ  thÃªm LecturerID náº¿u sá»­a
            let url = '/Admin/CreateLecturer';
            if (lecturerId && lecturerId !== '0') {
                url = `/Admin/EditLecturer/${lecturerId}`;
                data.LecturerID = parseInt(lecturerId);
                console.log('MODE: EDIT - Lecturer ID:', lecturerId);
            } else {
                console.log('MODE: CREATE');
            }

            const jsonBody = JSON.stringify(data);
            console.log('ğŸ“¤ Sending to:', url);
            console.log('ğŸ“¦ Data:', data);
            console.log('ğŸ“„ JSON:', jsonBody);

            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                },
                credentials: 'same-origin',
                body: jsonBody
            })
                .then(response => {
                    console.log('ğŸ“¨ Response status:', response.status);
                    if (!response.ok) {
                        return response.text().then(text => {
                            console.error('âŒ Error response:', text);
                            throw new Error(`HTTP ${response.status}: ${text}`);
                        });
                    }
                    return response.json();
                })
                .then(responseData => {
                    console.log('âœ… Response data:', responseData);
                    if (responseData.success) {
                        alert('âœ… ' + responseData.message);
                        closeModal();
                        setTimeout(() => {
                            location.reload();
                        }, 500);
                    } else {
                        alert('âŒ ' + (responseData.message || 'CÃ³ lá»—i xáº£y ra'));
                    }
                })
                .catch(error => {
                    console.error('âŒ Fetch error:', error);
                    alert('âŒ Lá»—i: ' + error.message);
                });

            return false;
        }

        // Khá»Ÿi táº¡o khi DOM sáºµn sÃ ng
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initFormHandlers);
        } else {
            initFormHandlers();
        }
    })();
</script>