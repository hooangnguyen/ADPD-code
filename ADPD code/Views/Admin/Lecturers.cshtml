<!-- Modal ThÃªm/Sá»­a Giáº£ng viÃªn -->
<div id="lecturerModal" class="modal" style="display: none;">
    <div class="modal-content">
        <div class="modal-header">
            <h2 id="modalTitle">ThÃªm Giáº£ng viÃªn</h2>
            <button type="button" class="close-btn" onclick="closeModal()">Ã—</button>
        </div>
        <form id="lecturerForm">
            <div class="modal-body">
