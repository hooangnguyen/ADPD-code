@model IEnumerable<ADPD_code.Models.Lecturer>
@{
    var isPartial = ViewData["IsPartial"] as bool? ?? false;
    Layout = isPartial ? null : "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/AdminDashboard.css?v=1.0" rel="stylesheet" asp-append-version="true" />

<div class="management-wrapper">
    <div class="management-header">
        <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 10px;">
            <div>
                <h1>
                    <span>üë©‚Äçüè´</span>
                    Manage Lecturers
                </h1>
                <p>Add, edit, or delete lecturer information</p>
            </div>
            <a href="@Url.Action("Dashboard", "Admin")"
               class="btn btn-secondary"
               style="padding: 10px 20px; text-decoration: none; display: inline-flex; align-items: center; gap: 8px;"
               data-partial-url="@Url.Action("Dashboard", "Admin", new { partial = true })">
                ‚Üê Back to Dashboard
            </a>
        </div>
    </div>

    <div class="management-toolbar">
        <div class="search-container">
            <span class="search-icon">üîç</span>
            <input type="text" id="searchInput" placeholder="Search by name, email...">
        </div>
        <button type="button" class="btn btn-primary" onclick="showCreateModal()">
            ‚ûï Add Lecturer
        </button>
    </div>

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Lecturer ID</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Department</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="lecturerTableBody">
                @{
                    int index = 1;
                }
                @foreach (var lecturer in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td><strong>@lecturer.LecturerID.ToString().PadLeft(5, '0')</strong></td>
                        <td>@lecturer.FullName</td>
                        <td>@lecturer.Email</td>
                        <td>@lecturer.Phone</td>
                        <td>@(lecturer.Department?.DepartmentName ?? "N/A")</td>
                        <td>
                            <button type="button" class="btn btn-success" style="padding: 6px 12px; font-size: 12px; margin-right: 5px;" onclick="editLecturer(@lecturer.LecturerID)">‚úèÔ∏è Edit</button>
                            <button type="button" class="btn btn-danger" style="padding: 6px 12px; font-size: 12px;" onclick="deleteLecturer(@lecturer.LecturerID)">üóëÔ∏è Delete</button>
                        </td>
                    </tr>
                    index++;
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Add/Edit Lecturer Modal -->
<div id="lecturerModal" class="modal" style="display: none;">
    <div class="modal-content">
        <div class="modal-header">
            <h2 id="modalTitle">Add Lecturer</h2>
            <button type="button" class="close-btn" onclick="closeModal()">√ó</button>
        </div>
        <form id="lecturerForm">
            <div class="modal-body">
                <input type="hidden" id="lecturerId" name="LecturerID" />
                <div class="form-group">
                    <label>Full Name *</label>
                    <input type="text" id="fullName" name="FullName" required />
                </div>
                <div class="form-group">
                    <label>Email *</label>
                    <input type="email" id="email" name="Email" required />
                </div>
                <div class="form-group">
                    <label>Phone</label>
                    <input type="tel" id="phone" name="Phone" />
                </div>
                <div class="form-group">
                    <label>Department</label>
                    <select id="departmentId" name="DepartmentID">
                        <option value="">-- Select Department --</option>
                        @if (ViewBag.Departments != null)
                        {
                            @foreach (var dept in ViewBag.Departments)
                            {
                                <option value="@dept.DepartmentID">@dept.DepartmentName</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" onclick="closeModal()" style="background: #6c757d; color: white;">Cancel</button>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

<script>
    (function() {
        'use strict';

        window.showCreateModal = function() {
            console.log('showCreateModal called');
            const modal = document.getElementById('lecturerModal');
            const form = document.getElementById('lecturerForm');
            const title = document.getElementById('modalTitle');
            const lecturerId = document.getElementById('lecturerId');

            if (!modal || !form || !title || !lecturerId) {
                console.error('Modal elements not found');
                alert('Error opening form!');
                return;
            }

            title.textContent = 'Add Lecturer';
            form.reset();
            lecturerId.value = '';
            modal.style.display = 'block';
            setTimeout(initFormHandlers, 100);
        };

        window.editLecturer = function(id) {
            console.log('editLecturer called with id:', id);
            fetch(`/Admin/EditLecturer/${id}`)
                .then(response => {
                    if (!response.ok) throw new Error(`HTTP ${response.status}`);
                    return response.json();
                })
                .then(data => {
                    if (data.success && data.lecturer) fillEditForm(data.lecturer);
                    else alert('‚ùå ' + (data.message || 'Lecturer not found'));
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error loading lecturer info: ' + error.message);
                });
        };

        function fillEditForm(lecturer) {
            const modal = document.getElementById('lecturerModal');
            const title = document.getElementById('modalTitle');

            if (!modal || !title) return;

            title.textContent = 'Edit Lecturer';
            document.getElementById('lecturerId').value = lecturer.LecturerID || '';
            document.getElementById('fullName').value = lecturer.FullName || '';
            document.getElementById('email').value = lecturer.Email || '';
            document.getElementById('phone').value = lecturer.Phone || '';
            document.getElementById('departmentId').value = lecturer.DepartmentID || '';

            modal.style.display = 'block';
        }

        window.deleteLecturer = function(id) {
            if (!confirm('Are you sure you want to delete this lecturer?')) return;

            fetch(`/Admin/DeleteLecturer/${id}`, {
                method: 'POST',
                headers: {'Content-Type': 'application/json','Accept': 'application/json'}
            })
            .then(response => {
                if (!response.ok) return response.text().then(text => {throw new Error(`HTTP ${response.status}: ${text}`);});
                return response.json();
            })
            .then(data => {
                if (data.success) {
                    alert('‚úÖ ' + data.message);
                    location.reload();
                } else {
                    alert('‚ùå ' + (data.message || 'Error occurred'));
                }
            })
            .catch(error => alert('‚ùå Error deleting lecturer: ' + error.message));
        };

        window.closeModal = function() {
            const modal = document.getElementById('lecturerModal');
            if (modal) modal.style.display = 'none';
        };

        function initFormHandlers() {
            const form = document.getElementById('lecturerForm');
            if (form && form.dataset.listenerAttached !== 'true') {
                form.addEventListener('submit', handleFormSubmit);
                form.dataset.listenerAttached = 'true';
            }

            const searchInput = document.getElementById('searchInput');
            if (searchInput && searchInput.dataset.listenerAttached !== 'true') {
                searchInput.addEventListener('input', function() {
                    const searchTerm = this.value.toLowerCase();
                    document.querySelectorAll('#lecturerTableBody tr').forEach(row => {
                        row.style.display = row.textContent.toLowerCase().includes(searchTerm) ? '' : 'none';
                    });
                });
                searchInput.dataset.listenerAttached = 'true';
            }

            window.onclick = function(event) {
                const modal = document.getElementById('lecturerModal');
                if (event.target === modal) closeModal();
            };
        }

        function handleFormSubmit(e) {
            e.preventDefault();
            e.stopPropagation();

            const lecturerId = document.getElementById('lecturerId').value.trim();
            const fullName = document.getElementById('fullName').value.trim();
            const email = document.getElementById('email').value.trim();
            const phone = document.getElementById('phone').value.trim();
            const departmentId = document.getElementById('departmentId').value.trim();

            if (!fullName) { alert('‚ùå Please enter full name'); return false; }
            if (!email) { alert('‚ùå Please enter email'); return false; }

            const data = {
                FullName: fullName,
                Email: email,
                Phone: phone || '',
                DepartmentID: departmentId ? parseInt(departmentId) : null
            };

            let url = '/Admin/CreateLecturer';
            if (lecturerId && lecturerId !== '0') {
                url = `/Admin/EditLecturer/${lecturerId}`;
                data.LecturerID = parseInt(lecturerId);
            }

            fetch(url, {
                method: 'POST',
                headers: {'Content-Type': 'application/json','Accept': 'application/json'},
                credentials: 'same-origin',
                body: JSON.stringify(data)
            })
            .then(response => {
                if (!response.ok) return response.text().then(text => {throw new Error(`HTTP ${response.status}: ${text}`);});
                return response.json();
            })
            .then(responseData => {
                if (responseData.success) {
                    alert('‚úÖ ' + responseData.message);
                    closeModal();
                    setTimeout(() => location.reload(), 500);
                } else {
                    alert('‚ùå ' + (responseData.message || 'Error occurred'));
                }
            })
            .catch(error => alert('‚ùå Error: ' + error.message));

            return false;
        }

        if (document.readyState === 'loading') document.addEventListener('DOMContentLoaded', initFormHandlers);
        else initFormHandlers();
    })();
</script>
