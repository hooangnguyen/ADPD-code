@{
    Layout = null;
    var isPartial = ViewData["IsPartial"] as bool? ?? false;
}

@if (isPartial)
{
    @await Html.PartialAsync("_DashboardHomePartial")
}
else
{
    <link rel="stylesheet" href="~/css/AdminDashboard.css" asp-append-version="true" />
    <body>
        <aside class="sidebar">
            <div class="sidebar-header">
                <a href="@Url.Action("Dashboard", "Admin")" class="sidebar-logo">
                    ⚙️ AdminMS
                </a>
            </div>

            <div class="user-profile">
                <div class="user-avatar">👤</div>
                <div class="user-info">
                    <h3>Quản trị viên</h3>
                    <p>Administrator</p>
                </div>
            </div>

            <ul class="menu">
                <li class="menu-item">
                    <a href="@Url.Action("Dashboard", "Admin")"
                       class="active"
                       data-partial-url="@Url.Action("Dashboard", "Admin", new { partial = true })">
                        <span class="menu-icon">🏠</span>
                        <span>Trang chủ</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="@Url.Action("Students", "Admin")"
                       data-partial-url="@Url.Action("Students", "Admin", new { partial = true })">
                        <span class="menu-icon">🎓</span>
                        <span>Quản lý Sinh viên</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="@Url.Action("Lecturers", "Admin")"
                       data-partial-url="@Url.Action("Lecturers", "Admin", new { partial = true })">
                        <span class="menu-icon">👩‍🏫</span>
                        <span>Quản lý Giảng viên</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="@Url.Action("Courses", "Admin")"
                       data-partial-url="@Url.Action("Courses", "Admin", new { partial = true })">
                        <span class="menu-icon">📚</span>
                        <span>Quản lý Môn học</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="@Url.Action("Classes", "Admin")"
                       data-partial-url="@Url.Action("Classes", "Admin", new { partial = true })">
                        <span class="menu-icon">🏫</span>
                        <span>Quản lý Lớp học</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="@Url.Action("Accounts", "Admin")"
                       data-partial-url="@Url.Action("Accounts", "Admin", new { partial = true })">
                        <span class="menu-icon">🔐</span>
                        <span>Quản lý Tài khoản</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="@Url.Action("Statistics", "Admin")"
                       data-partial-url="@Url.Action("Statistics", "Admin", new { partial = true })">
                        <span class="menu-icon">📊</span>
                        <span>Thống kê & Báo cáo</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="@Url.Action("Logout", "Login")">
                        <span class="menu-icon">🚪</span>
                        <span>Đăng xuất</span>
                    </a>
                </li>
            </ul>
        </aside>

        <main class="main-content">
            <div id="dynamic-content"
                 data-default-url='@Url.Action("Dashboard", "Admin", new { partial = true })'>
                @await Html.PartialAsync("_DashboardHomePartial")
            </div>
        </main>
        <script src="~/js/Dashboard.js" asp-append-version="true"></script>
    </body>
}
